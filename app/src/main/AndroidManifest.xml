<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.develup.desafioclublanacion" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ClubLaNacionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ClubLaNacionTheme" >
        <activity
            android:name=".actividades.ActividadPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.ActividadConfiguracionInicial"
            android:screenOrientation="portrait" />

        <service
            android:name=".servicios.ServicioDeBeneficiosCercanos"
            android:enabled="true" />

        <receiver android:name="servicios.TelefonoEncendido" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".actividades.ActividadDetalleBeneficio"
            android:label="@string/title_activity_actividad_detalle_beneficio"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>

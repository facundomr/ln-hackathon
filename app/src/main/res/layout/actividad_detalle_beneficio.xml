<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.18"
                android:background="@color/azul_oscuro_club">

                <ar.com.develup.desafioclublanacion.componentes.AutoResizeTextView
                    android:id="@+id/descripcion_beneficio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="146dp"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    tools:text="2x1 oferta!"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.82"
                android:background="@color/gris_contenedor">

            </RelativeLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/imagen_beneficio"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            tools:src="@drawable/classic"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="16dp"/>
    </RelativeLayout>
</RelativeLayout>
